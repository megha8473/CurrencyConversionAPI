{
  "openapi": "3.0.1",
  "info": {
    "title": "Currency Conversion API",
    "description": "API for managing currency rates and performing conversions.",
    "version": "v1"
  },
  "paths": {
    "/api/Auth/login": {
      "post": {
        "tags": [
          "Auth"
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/UserLogin"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Currency/rates": {
      "get": {
        "tags": [
          "Currency"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Currency/convert": {
      "post": {
        "tags": [
          "Currency"
        ],
        "requestBody": {
          "content": {
            "application/json-patch+json": {
              "schema": {
                "$ref": "#/components/schemas/Conversion"
              }
            },
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Conversion"
              }
            },
            "text/json": {
              "schema": {
                "$ref": "#/components/schemas/Conversion"
              }
            },
            "application/*+json": {
              "schema": {
                "$ref": "#/components/schemas/Conversion"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    },
    "/api/Currency/fetch-rates": {
      "post": {
        "tags": [
          "Currency"
        ],
        "responses": {
          "200": {
            "description": "OK"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Conversion": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "fromCurrency": {
            "type": "string",
            "nullable": true
          },
          "toCurrency": {
            "type": "string",
            "nullable": true
          },
          "amount": {
            "type": "number",
            "format": "double"
          },
          "convertedAmount": {
            "type": "number",
            "format": "double"
          },
          "conversionDate": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      },
      "UserLogin": {
        "type": "object",
        "properties": {
          "username": {
            "type": "string",
            "nullable": true
          },
          "password": {
            "type": "string",
            "nullable": true
          }
        },
        "additionalProperties": false
      }
    }
  }
}